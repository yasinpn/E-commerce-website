<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">number</th>
                    <th scope="col">title</th>
                    <th scope="col">category</th>
                    <th scope="col">price</th>
                    <th scope="col">Describtion</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Describtion}}</td>
                    <td><img style="width:50px;heigth:50px" src="/product-images/{{this._id}}.jpg"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('do you want to delete {{this.Name}}')">Delete</a>
                        

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>